@model tunisiaToday.Models.Article

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Previsualisation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Previsualisation)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @if(Model.ImageUrl != null)
            {
                <img src="@Model.ImageUrl" style="max-height:300px" />
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePublication)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePublication)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Maj)
        </dt>
        <dd class="col-sm-10">

            @if (DateTime.Compare(Model.Maj, new DateTime(0001, 01, 01, 0, 0, 0)) == 0)
            {
                <p></p>
            }
            else
            {
                @Model.Maj
            }

        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.estUne)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estUne)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="confirm()"/> |
        <a asp-action="Index">Back to List</a>
    </form>




</div>


