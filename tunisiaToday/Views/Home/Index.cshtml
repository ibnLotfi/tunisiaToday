                </div>
            </div>
        </div>
    </div>
</div>

<hr />



<div class="internationnal">
    <h1>Internationnal</h1>
    <div class="container">
        <div class="row">
            @if (Model.Article_Int.ToList().Count >= 3)
            {
                @foreach (var item in Model.Article_Int.ToList().GetRange(0, 3))
                {
            <div class="col-3 m-1" style="border: solid black 0.1px;background-color:rgb(128, 128, 128)">
                <h6>@item.Title</h6>
                <img src="~/img/visuel-non-disponible.jpg" style="width:100px;height:100px;" />
                @if (@item.Text.Length >= 150)
                {
                    <p>@item.Text.Substring(0, 150)...</p>
                }
                else
                {
                    @item.Text
                }
            <a class="btn btn-primary text-white" asp-controller="Article" asp-action="Details" asp-route-id="@item.Id">Lire</a>
            </div>
                }
            }
            else
            {
                @foreach (var item in Model.Article_Int.ToList())
                {
        <div class="col-3 m-1" style="border: solid black 0.1px;background-color: rgb(128, 128, 128)">
