@model IEnumerable<tunisiaToday.Models.Article>
@using Microsoft.AspNetCore.Html;

@{
    ViewData["Title"] = "ListeArticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container" style="margin-top:90px;">
        @foreach (var item in Model)
        {


            <div class="row border m-xl-auto" style="margin-bottom:10px">

                
                <div class="col-md-6 p-4">
                    <img src="@item.ImageUrl" style="max-height:600px;width:100%;" />
                </div>
                <div class="col-md-6  m-xl-auto p-4">
                    <div class="row  text-center">
                        <a class="text-dark text-decoration-none" asp-controller="Article" asp-action="Lecture" asp-route-id="@item.Id"><h1>@item.Title</h1></a>
                    </div>
                    <div class="row  text-center">
                        <p class="text-dark-50 text-center"> Publié le @item.DatePublication</p>
                    </div>
                    <div class="row m-xl-auto">
                        <a class="text-dark text-decoration-none" asp-controller="Article" asp-action="Lecture" asp-route-id="@item.Id">@(new HtmlString(item.Previsualisation))</a>
                    </div>
                </div>
            </div>

        }

    </div>



