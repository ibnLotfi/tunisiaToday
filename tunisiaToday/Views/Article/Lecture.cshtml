@model tunisiaToday.Models.Article

@using Microsoft.AspNetCore.Html;


@{
    ViewData["Title"] = "Lecture";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container" style="margin-top:60px">


        <div class="row">
            <div class="col-2">

            </div>

            <div class="col-8">

                <h3>@Model.Title</h3>
                @if (!(DateTime.Compare(Model.Maj, new DateTime(0001, 01, 01, 0, 0, 0)) == 0))
                {
                    <p style="font-size:0.7em;color:grey">Publié le @Model.DatePublication, mis à jour le @Model.Maj</p>
                }
                else
                {
                    <p style="font-size:0.7em;color:grey">Publié le @Model.DatePublication</p>
                }
            </div>


            <div class="col-2">

            </div>
        </div>


        <div class="row">
            <div class="col-2">

            </div>

            <div class="col-8">

                @(new HtmlString(@Model.Text))
            </div>


            <div class="col-2">

            </div>
        </div>

    </div>
